    <!-- ===========将启动快捷前置键从O改为[================================================= -->
  <replacementdef>
    <replacementname>LAUNCHER_MODE_V2_KEY</replacementname>
    <!-- You can change the start key. -->
    <replacementvalue>KeyCode::BRACKET_LEFT</replacementvalue>
  </replacementdef>

    <replacementdef>
        <replacementname>LAUNCHER_MODE_V2_EXTRA</replacementname>
        <replacementvalue>
      <![CDATA[
        <autogen>
